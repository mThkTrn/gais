{
  "name": "gaze-cursor",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "electron-builder install-app-deps",
    "pack": "npm run build:python && electron-builder --dir",
    "dist": "npm run build:python && electron-builder",
    "build:python": "node scripts/build-python.js"
  },
  "dependencies": {},
  "devDependencies": {
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.gazecursor.app",
    "productName": "Gaze Cursor",
    "directories": {
      "output": "dist/electron"
    },
    "files": [
      "**/*",
      "!**/__pycache__/*",
      "!**/*.pyc",
      "!**/build/**/*",
      "!**/venv/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "media/GAIS_Logo.png",
      "signAndEditExecutable": false
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": ["dmg", "zip"],
      "icon": "media/GAIS_Logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Gaze Cursor"
    },
    "extraResources": [
      {
        "from": "dist/python",
        "to": "python",
        "filter": [
          "**/*"
        ]
      }
    ]
  }
}